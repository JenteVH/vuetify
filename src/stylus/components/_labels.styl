@import '../bootstrap'
@import '../theme'

v-label($material)
  color: $material.text.secondary

theme(v-label, "v-label")

.v-label
  bottom: 8px
  font-size: 16px
  // left: 0px
  line-height: 1
  min-height: 8px
  pointer-events: none
  position: absolute
  transform-origin: top left
  transition: .3s $transition.swing

  &--active
    // left: 16px
    transform: translate(0, -18px) scale(.75)

  &--single-line
    transform: translate(0, 0)
